{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Guji",
  "scopeName": "source.guji",
  "patterns": [
    {
      "include": "#block"
    }
  ],
  "repository": {
    "block": {
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#punctuation"
        },
        {
          "include": "#page-decl"
        },
        {
          "include": "#large-line"
        },
        {
          "include": "#book"
        },
        {
          "include": "#large-circle-letter"
        },
        {
          "include": "#large-letter"
        },
        {
          "include": "#space"
        }
      ]
    },
    "comment": {
      "match": "//.*",
      "name": "comment.line.double-slash"
    },
    "punctuation": {
      "match": "，|。|·|：",
      "name": "comment.line.punctuation.guji"
    },
    "page-decl": {
      "match": "^\\s*@\\d+\\s*$",
      "name": "comment.line.page-decl.guji"
    },
    "large-line": {
      "match": "^\\s*#+ [^#【】]+\\s*$",
      "name": "markup.heading.large-line.guji"
    },
    "large-circle-letter": {
      "match": "#\\([^#【】(]",
      "name": "markup.heading.large-circle-letter.guji"
    },
    "large-letter": {
      "match": "#[^#【】(]",
      "name": "markup.heading.large-letter.guji"
    },
    "space": {
      "match": "\\*|　",
      "name": "markup.inline.raw.space.guji"
    },
    "book": {
      "begin": "【",
      "end": "】",
      "beginCaptures": {
        "0": {
          "name": "punctuation.paren.open.book.guji"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.paren.close.book.guji"
        }
      },
      "contentName": "markup.underline.book.guji"
    }
  }
}
