{
  "scopeName": "source.guji",
  "patterns": [
    {
      "include": "#expression"
    }
  ],
  "repository": {
    "expression": {
      "patterns": [
        {
          "include": "#letter"
        },
        {
          "include": "#paren-expression"
        }
      ]
    },
    "letter": {
      "match": "@|#|\\*",
      "name": "keyword.letter"
    },
    "paren-expression": {
      "begin": "【",
      "end": "】",
      "beginCaptures": {
        "0": {
          "name": "punctuation.paren.open"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.paren.close"
        }
      },
      "name": "guji.book",
      "patterns": [
        {
          "include": "#expression"
        }
      ]
    }
  }
}
